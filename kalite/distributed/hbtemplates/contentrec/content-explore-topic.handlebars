<!--likely to be a link to the subject in the sidenav tree-->
<a href="/learn/{{suggested_topic.path}}">
  <div id="content-explore-topic">
    <div class="row">
      <div class="col-xs-12">
          <h5 class="small">{{_ "Based on your interest in" }} {{ interest_topic.title }}:</h5>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
          <h3>{{ suggested_topic.title }}:</h3>
      </div>
      {{#if suggested_topic.description }}
      <div class="col-xs-6">
        <p><b>{{_ "Description" }}:</b><p>
        <p>{{ truncate suggested_topic.description 100 }}</p>
      </div>
      {{/if}}
      <hr class="module_divider" />
    </div>

  </div>
</a>
