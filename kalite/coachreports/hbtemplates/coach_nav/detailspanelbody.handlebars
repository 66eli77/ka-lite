<div class="tabbable tabs-left">
	<ul class="nav nav-tabs">
		{{#each collection}}
		<li {{#if @first}}class="active"{{/if}}>
			<a href="#{{ id }}" data-toggle="tab" aria-expanded="true">Question {{ @index }}</a>
		</li>
		{{/each}}
	</ul>
	<div class="tab-content">
		{{#each collection}}
		<div class="tab-pane {{#if @first}}active{{/if}}" id="{{ id }}">
			<table class="table table-striped table-bordered details-table">
			<thead>
			<tr>
				<th>Attempt</th>
				<th>Action</th>
				<th>Duration</th>
				<th>Status</th>
			</tr>
			</thead>
			<tbody>
			{{#each response_log }}
			<tr>
				<td>{{ @index }}</td>
				<td>{{ type }}{{#if answer}} {{answer}}{{/if}}</td>
				<td>{{ timestamp }}</td>
				<td>{{#ifcond correct "===" "true"}}{{_ "Correct" }}{{else}}{{#ifcond correct "===" "false" }}{{_ "Incorrect" }}{{/ifcond}}{{/ifcond}}</td>
			</tr>
			{{/each}}
			</tbody>
			</table>
		</div>
		{{/each}}
	</div>
</div>